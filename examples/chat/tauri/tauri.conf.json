{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chat",
  "version": "0.0.0",
  "identifier": "com.example.chat",
  "build": {
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build:static",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [{ "title": "Chat", "width": 800, "height": 600 }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
